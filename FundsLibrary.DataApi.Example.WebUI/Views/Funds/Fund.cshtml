@model FundsLibrary.DataApi.Example.Service.Domain.FundsLibrary.DataApi.Domain.FundUnit

@{
	ViewBag.Title = string.Format("{0} {1} {2}",
									 Model.StaticData.Management.GroupShortName,
									 Model.StaticData.Identification.ClassName,
									 Model.StaticData.Identification.Name);
}

<div class="row">
	<div class="col-lg-12">
		<div class="well">
			<div class="row">
				<div class="col-lg-12">
					<h2>
						@string.Format("{0} {1} {2}",
							Model.StaticData.Management.GroupShortName,
							Model.StaticData.Identification.ClassName,
							Model.StaticData.Identification.Name)
					</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<h4>Details</h4>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-6">
					Sedol: @Model.StaticData.Identification.SedolCode
				</div>
				<div class="col-lg-6">
					Exit Charge: @Model.StaticData.Charges.Exit
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-6">
		<div class="well">
			<h4>
				Documents
			</h4>
			<h5>Factsheets</h5>
			<ul>
				<li><a href="@Model.Documents.Factsheets.PrivateClass">Private Class Factsheet</a></li>
				<li><a href="@Model.Documents.Factsheets.ProfessionalClass">Professional Class Factsheet</a></li>
				<li><a href="@Model.Documents.Factsheets.PrivateUnit">Private Unit Factsheet</a></li>
				<li><a href="@Model.Documents.Factsheets.ProfessionalUnit">Professional Unit Factsheet</a></li>
			</ul>
		</div>
	</div>
	<div class="col-lg-6">
		<div class="well">
			<h4>
				Ratings
			</h4>
			<ul>
				<li>Defeqto: @Model.RatingsData.Defaqto.DiamondRating</li>
				<li>Fund Calibre: @Model.RatingsData.FundCalibre.EliteRating</li>
				<li>James Brearley: @Model.RatingsData.JamesBrearley.Overall</li>
				<li>Morningstar: @Model.RatingsData.Morningstar.AnalystRating</li>
				<li>Pure Research: @Model.RatingsData.PureResearch.Rating</li>
				<li>Rayner Spencer Mills: @Model.RatingsData.RaynerSpencerMills.Rating</li>
				<li>Scopic: @Model.RatingsData.Scopic.Rating</li>
				<li>Square Mile: @Model.RatingsData.SquareMile.Rating</li>
			</ul>
		</div>
	</div>
</div>